{
  "name": "trasim-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "yarn workspace trasim-api dev",
    "dev:web": "yarn workspace trasim-web dev",
    "dev:indexer": "yarn workspace trasim-indexer dev",
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:web\" \"yarn dev:indexer\"",
    "build": "yarn workspaces foreach --all --include='@trasim/*' run build",
    "install": "yarn install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
